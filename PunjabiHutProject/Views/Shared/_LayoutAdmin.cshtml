@using PunjabiHutProject.Models

@{ 
    Model1 db = new Model1();
    Admin a = db.Admins.FirstOrDefault();

    if (Session["Admin"] == null)
    {
        Response.Redirect("/Home/Login");
    }
    else
    {
        a = (Admin)Session["Admin"];
    }
}


<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Punjabi Hut - Admin</title>
    <!-- BOOTSTRAP STYLES-->
    <link href="~/content/Admin/assets/css/bootstrap.css" rel="stylesheet" />
    <!-- FONTAWESOME STYLES-->
    <link href="~/content/Admin/assets/css/font-awesome.css" rel="stylesheet" />
    <!-- MORRIS CHART STYLES-->
    <link href="~/content/Admin/assets/js/morris/morris-0.4.3.min.css" rel="stylesheet" />
    <!-- CUSTOM STYLES-->
    <link href="~/content/Admin/assets/css/custom.css" rel="stylesheet" />
    <!-- GOOGLE FONTS-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
</head>
<body>
    <div id="wrapper">
        <nav class="navbar navbar-default navbar-cls-top " role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">
                    @a.ADMIN_NAME
                                <br /> @*<h5>@a.ADMIN_EMAIL</h5>*@
                            </a>
            </div>
            <div style="color: White;
padding: 15px 50px 5px 50px;
float: right;
font-size: 16px;"> Last access : @System.DateTime.Now.ToLongDateString()  @System.DateTime.Now.ToShortTimeString() &nbsp; <a href="@Url.Action("Logout","Home")" class="btn btn-danger square-btn-adjust">Logout</a> </div>
        </nav>
        <!-- /. NAV TOP  -->
        <nav class="navbar-default navbar-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav" id="main-menu">
                    <li class="text-center">
                        <img src="~/content/Admin/assets/img/find_user.png" class="user-image img-responsive" />
                    </li>


                    <li>
                        <a class="active-menu" href="@Url.Action("IndexAdmin","Home")"><i class="fa fa-dashboard fa-3x"></i> Dashboard</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Admins")"><i class="fa fa-desktop fa-3x"></i> Manage Admin Accounts </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Categories")"><i class="fa fa-qrcode fa-3x"></i> Manage Category</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Products")"><i class="fa fa-bar-chart-o fa-3x"></i> Manage Products</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Extras")"><i class="fa fa-bar-chart-o fa-3x"></i> Manage Extra Items</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Purchase","Purchase")"><i class="fa fa-table fa-3x"></i> Manage Purchase</a>
                    </li>

                    <li>
                        <a href="#"><i class="fa fa-sitemap fa-3x"></i> Reports<span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a href="@Url.Action("StockReport","Reports")">Stock Reports</a>
                            </li>
                            <li>
                                <a href="@Url.Action("ProfitandLossReport","Reports")">Profit & Loss Reports</a>
                            </li>
                            <li>
                                <a href="#">Transaction Reports<span class="fa arrow"></span></a>
                                <ul class="nav nav-third-level">
                                    <li>
                                        <a href="@Url.Action("PurchaseReport","Reports")">Purchase Reports</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("SaleReport","Reports")">Sale Reports</a>
                                    </li>


                                </ul>

                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="blank.html"><i class="fa fa-square-o fa-3x"></i> Feed Back </a>
                    </li>
                </ul>

            </div>

        </nav>
        <!-- /. NAV SIDE  -->
        <div id="page-wrapper">
            <div id="page-inner">
                <div class="row">
                    <div class="col-md-12">
                        <h2>Admin Dashboard</h2>
                        <h4>Welcome @a.ADMIN_NAME , Love to see you back.</h4>
                        
                    </div>
                </div>
                <!-- /. ROW  -->

                @RenderBody()

            </div>
            <!-- /. PAGE INNER  -->
        </div>
        <!-- /. PAGE WRAPPER  -->
    </div>
    <!-- /. WRAPPER  -->
    <!-- SCRIPTS -AT THE BOTOM TO REDUCE THE LOAD TIME-->
    <!-- JQUERY SCRIPTS -->
    <script src="~/content/Admin/assets/js/jquery-1.10.2.js"></script>
    <!-- BOOTSTRAP SCRIPTS -->
    <script src="~/content/Admin/assets/js/bootstrap.min.js"></script>
    <!-- METISMENU SCRIPTS -->
    <script src="~/content/Admin/assets/js/jquery.metisMenu.js"></script>
    <!-- MORRIS CHART SCRIPTS -->
    <script src="~/content/Admin/assets/js/morris/raphael-2.1.0.min.js"></script>
    <script src="~/content/Admin/assets/js/morris/morris.js"></script>
    <!-- CUSTOM SCRIPTS -->
    <script src="~/content/Admin/assets/js/custom.js"></script>


</body>
</html>

